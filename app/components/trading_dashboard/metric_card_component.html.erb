<div style="background:#0f1720; border:1px solid #1f2a37; padding: 12px; border-radius: 8px;">
  <div style="font-size: 12px; opacity: 0.8;"><%= @label %></div>
  <div style="font-size: 22px; font-weight: 600; margin-top: 4px;"><%= @value %></div>
  <% if @sublabel.present? %>
    <div style="font-size: 12px; opacity: 0.8; margin-top: 4px;"><%= @sublabel %></div>
  <% end %>
</div>
